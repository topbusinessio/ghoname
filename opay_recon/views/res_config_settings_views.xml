<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_opay" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.opay</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@name='integration']" position="inside">
                <setting string="Opay Configurations" help="Set Opay parameter for wallet generation" id="opay_wallet">
                    <div class="content-group mt16">
                        <label for="opay_public_key" class="o_light_label mr8"/>
                        <field name="opay_public_key"/>
                    </div>
                    <div class="content-group mt16">
                        <label for="opay_client_auth_key" class="o_light_label mr8"/>
                        <field name="opay_client_auth_key"/>
                    </div>
                    <div class="content-group mt16">
                        <label for="opay_merchant_id" class="o_light_label mr8"/>
                        <field name="opay_merchant_id"/>
                    </div>
                    <div class="content-group mt16">
                        <label for="opay_merchant_private_key" class="o_light_label mr8"/>
                        <field name="opay_merchant_private_key"/>
                    </div>
                    <div class="content-group mt16">
                        <label for="opay_account_prefix" class="o_light_label mr8"/>
                        <field name="opay_account_prefix"/>
                    </div>
                </setting>
            </xpath>
        </field>
    </record>

    <!-- Action and Menu items for the configuration -->
    <record id="opay_config_settings_action" model="ir.actions.act_window">
        <field name="name">Opay Configuration</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'module': 'opay_wallet'}</field>
    </record>

    <menuitem id="menu_opay_config_settings"
              name="Opay Configuration"
              parent="base.menu_administration"
              action="opay_config_settings_action"/>
</odoo>
